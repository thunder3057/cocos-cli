{
    "name": "cocos-cli",
    "version": "1.0.0-alpha.2",
    "displayName": "Cocos CLI Extension",
    "icon": "static/logo/logo.png",
    "description": "Cocos Creator CLI tool for project management and building",
    "main": "dist/index.js",
    "engines": {
        "vscode": "^4.0.0"
    },
    "bin": {
        "cocos": "./dist/cli.js"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "mcpServerDefinitionProviders": [
            {
                "id": "cocos-cli-mcp-provider",
                "label": "Cocos CLI MCP Provider"
            }
        ]
    },
    "scripts": {
        "clear": "node workflow/clear.js",
        "update:repos": "node workflow/update-repo.js",
        "test": "jest --config jest/jest.config.core.ts && jest --config jest/jest.config.mcp.ts",
        "test:quiet": "jest --config jest/jest.config.core.ts --silent && jest --config jest/jest.config.mcp.ts --silent",
        "test:mcp": "jest --config jest/jest.config.mcp.ts",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "compiler": "FORCE_UPDATE=true npm i",
        "compiler:engine": "node workflow/compiler-engine.js --force",
        "build:adapter": "node workflow/build-adapter.js --force",
        "build:cc-module": "node workflow/build-cc-module.js",
        "build": "npm run build:clear && tsc -b && node workflow/generate-schema.js",
        "compile": "npm run build:clear && tsc -b && node workflow/generate-schema.js",
        "build:clear": "node workflow/build-clear.js",
        "build:watch": "tsc -b --watch",
        "postinstall": "node workflow/postinstall.js",
        "download-tools": "node workflow/download-tools.js",
        "pack:script": "node workflow/pack-scripts.js",
        "release": "node workflow/release.js",
        "start": "node ./dist/commands/build-directly.js",
        "start:mcp": "node ./dist/mcp/start-server.js",
        "start:mcp-debug": "npx @modelcontextprotocol/inspector node /dist/mcp/start-server.js",
        "cli": "ts-node src/cli.ts"
    },
    "author": "cocos",
    "files": [
        "bin",
        "dist",
        "docs",
        "static",
        "workflow",
        "writablePath",
        "packages/cc-module"
    ],
    "license": "ISC",
    "devDependencies": {
        "@types/commander": "^2.12.5",
        "@types/compression": "^1.8.1",
        "@types/ejs": "^2.7.0",
        "@types/express": "^5.0.3",
        "@types/fs-extra": "~9.0.0",
        "@types/jest": "^29.5.12",
        "@types/lodash": "^4.17.20",
        "@types/minimatch": "^3.0.4",
        "@types/node": "^22.17.0",
        "@types/node-uuid": "^0.0.32",
        "@types/ora": "^3.2.0",
        "@types/plist": "^3.0.5",
        "@types/pngjs": "^3.4.2",
        "@types/rimraf": "^2.0.5",
        "@types/tmp": "^0.0.33",
        "@types/urijs": "^1.19.25",
        "@types/vscode": "^1.104.0",
        "@types/xmldom": "^0.1.34",
        "@typescript-eslint/eslint-plugin": "^8.42.0",
        "@typescript-eslint/parser": "^8.42.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.34.0",
        "globals": "^16.3.0",
        "jest": "^29.7.0",
        "jiti": "^2.5.1",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "typescript-eslint": "^8.42.0",
        "typescript-json-schema": "^0.65.1"
    },
    "dependencies": {
        "@babel/core": "7.22.20",
        "@cocos/ccbuild": "2.3.17",
        "@cocos/creator-programming-rollup-plugin-mod-lo": "^1.4.2",
        "@cocos/data-uri": "^1.0.6",
        "@cocos/fbx-gltf-conv": "^1.0.0-alpha.49.editor.1",
        "@cocos/fbx2gltf": "^1.0.8",
        "@cocos/module-system": "^0.0.21",
        "@editor/asset-db": "^3.0.0-alpha.2",
        "@editor/build-polyfills": "2.0.0",
        "@editor/lib-programming": "3.8.1",
        "@editor/quick-compiler": "^4.2.20",
        "@modelcontextprotocol/sdk": "^1.18.0",
        "@types/semver": "^7.7.1",
        "@types/xxhashjs": "^0.2.4",
        "cc": "file:./packages/cc-module",
        "chalk": "^2.4.2",
        "commander": "^11.0.0",
        "compression": "^1.8.1",
        "consola": "^3.4.2",
        "draco3dgltf": "^1.5.7",
        "ejs": "^2.7.1",
        "express": "^5.1.0",
        "fs-extra": "^10.0.0",
        "get-audio-duration": "^4.0.1",
        "get-video-duration": "^4.1.0",
        "gl": "^8.1.6",
        "globby": "^14.1.0",
        "glsl-parser": "^2.0.1",
        "glsl-tokenizer": "^2.1.5",
        "gltf-validator": "^2.0.0-dev.2.7",
        "gltfpack": "^0.14.0",
        "js-yaml": "^4.1.0",
        "jszip": "^3.10.1",
        "listr2": "^9.0.4",
        "lodash": "^4.17.21",
        "max-rects-packing": "^0.1.9",
        "meshopt_encoder": "^1.0.3",
        "minimatch": "^3.0.4",
        "node-localstorage": "^3.0.5",
        "node-uuid": "^1.4.8",
        "ora": "^5.4.1",
        "plist": "^3.1.0",
        "pngjs": "^3.4.0",
        "psd.js": "^3.9.2",
        "readline": "^1.3.0",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^2.7.1",
        "rollup-plugin-terser": "^7.0.2",
        "semver": "^7.7.2",
        "sharp": "^0.32.6",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "tga-js": "^1.1.1",
        "tmp": "^0.0.33",
        "urijs": "^1.19.11",
        "uuid": "^8.3.2",
        "xhr2": "^0.2.1",
        "xmldom": "^0.1.31",
        "xxhashjs": "^0.2.2",
        "zod": "^3.25.76"
    }
}